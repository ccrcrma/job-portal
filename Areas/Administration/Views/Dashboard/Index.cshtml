@model List<JobPostCommonViewModel>
@{
    ViewBag.Title = "dashboard";
}
<partial name="_DeleteModalPartial"></partial>
<h2>Index on dashboard</h2>
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Image</th>
                <th>Content</th>
                <th>Status</th>
                <th>Date</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @if (!string.IsNullOrEmpty(item.ImagePath))
                        {
                            <img src="~/@item.ImagePath" class="image-index">
                        }
                        else
                        {
                            <span>Image coming soon</span>
                        }
                    </td>
                    <td>@item.Title</td>
                    <td>@item.Description.Truncate(50)</td>
                    <td>@item.UpdatedOn.GetHumanFriendlyDate()</td>
                    <td>
                        <div class="d-flex">
                            <a href="@item.EditUrl" class="btn btn-sm bg-primary">Edit</a>
                            <button data-action="@item.DeleteRestoreUrl"
                                data-toggle="modal"
                                data-target="#delete-modal"
                                data-css-bg="danger"
                                data-action-type="delete"
                                class="btn btn-sm bg-danger ml-2">Delete</button>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

