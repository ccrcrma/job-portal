@model List<JobPostCommonViewModel>
@{
    ViewBag.Title = "trash";
}
<partial name="_DeleteModalPartial"></partial>
<h2>Trash</h2>
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Image</th>
                <th>Content</th>
                <th>Status</th>
                <th>Date</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @if (!string.IsNullOrEmpty(item.ImagePath))
                        {
                            <img src="~/@item.ImagePath" class="image-index">
                        }
                        else
                        {
                            <span>Image coming soon</span>
                        }
                    </td>
                    <td>@item.Title</td>
                    <td>@item.Description.Truncate(50)</td>
                    <td>@item.UpdatedOn.GetHumanFriendlyDate()</td>
                    <td>
                        <button 
                            data-action="@item.DeleteRestoreUrl"
                            data-action-type = "restore"
                            data-css-bg = "success"
                            data-toggle="modal"
                            data-target="#delete-modal"
                            class="btn btn-sm bg-success ml-2">Restore</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

