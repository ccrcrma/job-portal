@model List<Post>
@{
    Layout = "/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Posts";
}


<div class="container my-3">
    <h2 class="mb-4">All posts</h2>
    <div class="row">
        @foreach (var post in Model)
        {
            <div class="col-md-4">
                <div class="card">
                    <img src="~/@post.ImagePath" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@post.Title</h5>
                        <p class="card-text">@post.Body.Truncate(60)</p>
                        <a asp-action="Detail" asp-route-id="@post.Id" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
