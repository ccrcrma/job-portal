@page
@model ConfirmPhoneModel
@{
    ViewBag.Title = "Confirm Phone";
}

<div class="container mb-3">
    <div class="row">
        <div class="col-md-8">
            <h3 class="mt-5">Confirm your phone Number</h3>
            <p>We have sent a verification code to the phone number @Model.PhoneNumber
                Enter the code you receive to confirm your phone Number.
            </p>
            <form asp-page="ConfirmPhone">
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <div class="form-group">
                    <label class="form-label" asp-for="VerificationCode"></label>
                    <input asp-for="VerificationCode" class="form-control">
                    <span class="text-danger" asp-validation-for="VerificationCode"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>

</div>