@model List<Job>
@{
    ViewBag.Title = "User home";
}

<h1>Saved jobs coming soon</h1>
@if (Model.Count() == 0)
{
    <h3>You don't have any saved jobs</h3>
}
else 
{

    @foreach (var job in Model)
        {
            <div class="card mb-3">
                <div class="card-header">
                    <h5 class="card-title">@job.Title</h5>
                </div>
                <div class="card-body">
                    <span class="badge badge-primary">@job.Title</span>
                    <p class="card-text">@job.Description</p>
                </div>
                <div class="card-footer d-flex">
                    <a asp-action="Detail" asp-controller="Job" asp-area="" asp-route-id="@job.Id">Visit Detail</a>
                    <span class="ml-auto">Last Date: @job.Deadline.GetHumanFriendlyDate()</span>
                </div>
            </div>
        }
    }