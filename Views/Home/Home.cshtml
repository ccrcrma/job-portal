@section Scripts{
    <script>
    document.getElementById("show-filters").onclick = function(){
        Object.values(document.getElementsByClassName("show-more")).forEach(function(elem){
            elem.style.display = "block";
        });
    }   

    document.getElementById("category-dropdown").onchange = async function(event){
       var body =  await FilterJob({data:{category:event.target.value}});
       console.log(body);
    }

    async function FilterJob({baseUrl ="https://localhost:5001/", data = {}}){
        if(data.category != undefined && data.category != null){
            var baseUrl = `${baseUrl}?category=${data.category}`
        }
            console.log(baseUrl);
        const response = await fetch(baseUrl)
        return response.text();
    }
    </script>
